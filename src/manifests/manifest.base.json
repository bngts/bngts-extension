{
  "manifest_version": 3,
  "name": "방통실 Plus - 치지직 & SOOP 로그인 연동",
  "short_name": "방통실 Plus",
  "version": "3.2.2",
  "description": "방통실(bngts.com) 멀티뷰에서 치지직·SOOP 로그인을 자동 연동하고 플레이어를 최적화합니다. 스트리머 즐겨찾기, 방송 알림 기능을 제공합니다.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://bngts.com/",
  "permissions": [
    "activeTab",
    "alarms",
    "cookies",
    "declarativeNetRequestWithHostAccess",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "*://*.naver.com/*",
    "*://*.sooplive.co.kr/*",
    "*://*.mul.live/*",
    "*://*.bngts.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "chzzk.js"
      ],
      "matches": [
        "*://chzzk.naver.com/*",
        "*://mul.live/*",
        "*://www.mul.live/*",
        "*://bngts.com/*",
        "*://www.bngts.com/*"
      ],
      "world": "MAIN"
    },
    {
      "all_frames": true,
      "js": [
        "soop.js"
      ],
      "matches": [
        "*://play.sooplive.co.kr/*",
        "*://mul.live/*",
        "*://www.mul.live/*",
        "*://bngts.com/*",
        "*://www.bngts.com/*"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "all_frames": true,
      "js": [
        "soop-isolated.js"
      ],
      "matches": [
        "*://play.sooplive.co.kr/*"
      ],
      "run_at": "document_start"
    },
    {
      "all_frames": true,
      "js": [
        "chzzk-isolated.js"
      ],
      "matches": [
        "*://chzzk.naver.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
