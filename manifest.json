{
  "manifest_version": 3,
  "name": "방통실 Plus",
  "short_name": "방통실",
  "version": "3.2.2",
  "description": "방통실(bngts.com) 및 Mul.Live에서 치지직·SOOP 멀티뷰를 지원합니다. 로그인 연동, 플레이어 자동 최적화 기능을 제공합니다.",
  "minimum_chrome_version": "121",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "121.0",
      "id": "ext@bngts.com"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://bngts.com/",
  "permissions": [
    "activeTab",
    "cookies",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "*://*.naver.com/*",
    "*://*.sooplive.co.kr/*",
    "*://*.mul.live/*",
    "*://*.bngts.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "chzzk.js"
      ],
      "matches": [
        "*://chzzk.naver.com/*",
        "*://mul.live/*",
        "*://www.mul.live/*",
        "*://bngts.com/*",
        "*://www.bngts.com/*"
      ],
      "world": "MAIN"
    },
    {
      "all_frames": true,
      "js": [
        "soop.js"
      ],
      "matches": [
        "*://play.sooplive.co.kr/*",
        "*://mul.live/*",
        "*://www.mul.live/*",
        "*://bngts.com/*",
        "*://www.bngts.com/*"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
